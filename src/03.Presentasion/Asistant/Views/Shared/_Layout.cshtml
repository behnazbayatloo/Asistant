@using System.ComponentModel

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] -دستیار تو</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.fontcdn.ir/Vazir/Vazir.css">
       
</head>
<body>

    <!-- Header -->
    <header>
        <div class="nav-container">
            <div class="logo">خدمات ما</div>
            <div class="nav-links">
                <a asp-Controller="Home">خانه</a>

                     @await Component.InvokeAsync("ServicesMenu")
                   </div>
            <div class="auth-buttons">
                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                    
                        <span class="navbar-text text-white me-2">سلام، @User.Identity!.Name</span>
                   
                    <div class="nav-item">
                        <form class="d-inline" method="post" asp-area="Identity" asp-page="/Login/Login" asp-page-handler="Logout">
                            <button class="btn btn-outline-light btn-sm">خروج</button>
                        </form>
                  </div>
                   
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Login" class="login"> ورود</a>


                    <a asp-area="Identity" asp-page="/Account/Register" class="signup"> ثبت ‌نام </a>
                
                   
                }
            </div>
        </div>
    </header>

  
    
    <!-- محتوای اصلی -->
    <main class="container my-5"> @RenderBody() </main>
   
   

    <!-- Footer -->
    <footer>
        <div class="footer-links">
            <a href="#">درباره ما</a>
            <a href="#">تماس با ما</a>
            <a href="#">سوالات متداول</a>
            <a href="#">وبلاگ</a>
        </div>
        <p>© ۱۴۰۴ خدمات من - همه حقوق محفوظ است</p>
    </footer>
    <script>
        @RenderSection("Scripts", required: false)
    </script>
 
</body>
</html>