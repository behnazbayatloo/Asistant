@using Asistant.Areas.Customer.Models
@model CreateCommentViewModel

@{
    ViewData["Title"] = "ثبت نظر";
}

<div class="container mt-4">
    @if (ViewBag.Succeed != null)
    {
        <div class="alert alert-success">
            @ViewBag.Succeed
        </div>
    }
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }
  
    <div class="card mb-3 shadow-sm">
        <div class="card-header bg-primary text-white">
            خلاصه درخواست
        </div>
        <div class="card-body">
            <h5 class="card-title">@Model.Request.Title</h5>
            <p class="card-text text-muted">@Model.Request.Description</p>
            <ul class="list-unstyled small">
                <li><strong>خدمت:</strong> @Model.Request.HomeServiceName</li>
                <li><strong>تاریخ ثبت:</strong> @Model.Request.CreatedAt</li>
            </ul>

          
            @if (Model.Request.ImagesPath != null && Model.Request.ImagesPath.Any())
            {
                <div class="mt-3">
                    <div class="d-flex gap-2 overflow-auto">
                        @foreach (var img in Model.Request.ImagesPath.Take(3))
                        {
                            <img src="@img" class="rounded border" style="width:80px; height:80px; object-fit:cover;" />
                        }
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="card mb-3 shadow-sm">
        <div class="card-header bg-success text-white">
            پیشنهاد پذیرفته‌شده
        </div>
        <div class="card-body">
            <h6 class="card-title text-success">@Model.Suggestion.Title</h6>
            <p class="card-text">@Model.Suggestion.Description</p>
            <ul class="list-unstyled small">
                <li><strong>قیمت:</strong> @Model.Suggestion.Price.Value.ToString("N0") تومان</li>
                <li><strong>وضعیت:</strong> @Model.Suggestion.Status</li>
                <li><strong>کارشناس:</strong> @Model.Suggestion.ExpertName</li>
            </ul>

         
            @if (Model.Suggestion.ImagesPath != null && Model.Suggestion.ImagesPath.Any())
            {
                <div class="mt-3">
                    <div class="d-flex gap-2 overflow-auto">
                        @foreach (var img in Model.Suggestion.ImagesPath.Take(3))
                        {
                            <img src="@img" class="rounded border" style="width:80px; height:80px; object-fit:cover;" />
                        }
                    </div>
                </div>
            }
        </div>
    </div>


    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            ثبت نظر شما
        </div>
        <div class="card-body">
            <form asp-area="Customer" asp-action="AddComment" asp-controller="Request" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.Request.Id" />
                <input type="hidden" asp-for="@Model.Suggestion.ExpertId" />
                <input type="hidden" asp-for="@Model.Request.HomeServiceId" />
                <input type="hidden" asp-for="@Model.Request.CustomerId" />

                <div class="mb-3">
                    <label asp-for="@Model.Comment.Title" class="form-label">عنوان نظر</label>
                    <input asp-for="@Model.Comment.Title" class="form-control" placeholder="عنوان کوتاه برای نظر شما" />
                    <span asp-validation-for="@Model.Comment.Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Comment.Description" class="form-label">توضیحات</label>
                    <textarea asp-for="@Model.Comment.Description" class="form-control" rows="4" placeholder="نظر خود را بنویسید..."></textarea>
                    <span asp-validation-for="@Model.Comment.Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Comment.Rate" class="form-label">امتیاز</label>
                    <select asp-for="@Model.Comment.Rate" class="form-select">
                        <option value="1">⭐</option>
                        <option value="2">⭐⭐</option>
                        <option value="3">⭐⭐⭐</option>
                        <option value="4">⭐⭐⭐⭐</option>
                        <option value="5">⭐⭐⭐⭐⭐</option>
                    </select>
                    <span asp-validation-for="@Model.Comment.Rate" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">
                    ✅ ثبت نظر
                </button>
            </form>
        </div>
    </div>
</div>
