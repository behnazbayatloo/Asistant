
@using Asistant.Areas.Customer.Models
@model PagedViewModel<RequestViewModel,int>

@{
    ViewData["Title"] = "مدیریت سفارش‌‌های جاری";
}

<h4>مدیریت سفارش‌‌های جاری</h4>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}
@if (TempData["Succeed"] != null)
{
    <div class="alert alert-success">
        @TempData["Succeed"]
    </div>
}



@if (Model.Items is not null && Model.Items.Any())
{
    <table class="table table-striped table-hover text-center align-middle">
        <thead class="table-light">
            <tr>
                <th>شناسه</th>
                <th>نام کاربر</th>
                <th>نام سرویس</th>
                <th>عنوان سفارش</th>
                <th> تاریخ ثبت سفارش</th>
                <th>توضیحات سفارش</th>
                <th>تعداد پیشنهادات سفارش</th>

                <th>وضعیت سفارش</th>
                <th>تاریخ موردنظر کاربر برای دریافت سرویس</th>
                <th>تاریخ پذیرش پیشنهاد کارشناس</th>
                <th>تاریخ اتمام سرویس</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.CustomerName</td>

                    <td>
                        <span class="badge bg-info text-dark">@item.HomeServiceName</span>
                    </td>
                    <td class="text-start" style="max-width: 300px;">
                        @item.Title
                    </td>
                    <td class="text-start" style="max-width: 300px;">
                        @item.CreatedAt
                    </td>
                    <td class="text-start" style="max-width: 300px;">
                        @item.Description
                    </td>

                    <td>
                        <div class="text-center dir-rtl">
                            @item.SuggesstionCount.ToString()
                        </div>
                    </td>
                    <td>
                        @if (item.Status == "PendingExpertApproval")
                        {
                            <span class="badge bg-warning text-dark">در انتظار پیشنهاد از سوی اولین کارشناس</span>
                        }
                        else if (item.Status == "PendingSuggestionApproval")
                        {
                            <span class="badge bg-warning text-dark">در انتظار تایید پیشنهاد یکی از کارشناسان</span>
                        }
                        else if (item.Status == "AwaitingExpertArrivalOnSite")
                        {
                            <span class="badge bg-warning text-dark">در انتظار حاضر شدن کارشناس در محل</span>
                        }
                        else if (item.Status == "InProgress")
                        {
                            <span class="badge bg-warning text-dark">کارشناس در حال انجام حدمت</span>
                        }
                       
                    </td>
                    <td class="text-start" style="max-width: 300px;">
                        @item.AppointmentReadyDate
                    </td>

                    <td class="text-start" style="max-width: 300px;">
                        @item.VerifyExpertDate
                    </td>
                    <td class="text-start" style="max-width: 300px;">
                        @item.CompletedDate
                    </td>
                    <td>
                        <div class="btn-group" role="group">


                            @if (item.Status == "PendingExpertApproval" || item.Status == "PendingSuggestionApproval")
                            {
                                <form method="post" class="d-inline"
                                      asp-area="Customer"
                                      asp-controller="Request"
                                      asp-action="DeleteRequest"
                                      asp-route-requestId="@item.Id"
                                    onsubmit="return confirm('آیا از حذف این درخواست مطمئن هستید؟');">
                                    <button type="submit" class="btn btn-danger btn-sm" title="حذف">
                                        🗑
                                    </button>
                                </form>


                            }

                            @if ((item.Status == "PendingExpertApproval" || item.Status == "PendingSuggestionApproval") && item.SuggesstionCount > 0 )
                            {
                                <a asp-area="Customer"
                                   asp-controller="Request"
                                   asp-action="ShowSuggestions"
                                   asp-route-requestId="@item.Id" 
                                   class="btn btn-primary btn-sm">
                                   <i class="bi bi-eye"></i> مشاهده پیشنهادات</a>

                            }
                            @if ((item.Status == "PendingExpertApproval" || item.Status == "PendingSuggestionApproval") && item.SuggesstionCount == 0)
                            {
                                <span class="badge bg-warning text-dark">هنوز پیشنهادی از سوی کارشناسان ثبت نگردیده‌است</span>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>


    <nav>
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link"
                       asp-area="Customer"
                       asp-controller="Request"
                       asp-action="ShowInProgressRequests"
                       asp-route-pageNumber="@i"
                       asp-route-pageSize="@Model.PageSize">

                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>
}
else
{
    <div class="alert alert-info text-center">
        هیچ سفارشی برای نمایش وجود ندارد.
    </div>
}