
@using Asistant.Areas.Customer.Models
@model PagedViewModel<RequestViewModel,int>

@{
    ViewData["Title"] = " مشاهده سفارش‌‌های پیشین";
}

<h4>مشاهده سفارش‌‌های پیشین</h4>



@if (Model.Items is not null && Model.Items.Any())
{
    <table class="table table-striped table-hover text-center align-middle">
        <thead class="table-light">
            <tr>
                <th>شناسه</th>
                <th>نام کاربر</th>
                <th>نام سرویس</th>
                <th>عنوان سفارش</th>
                <th> تاریخ ثبت سفارش</th>
                <th>توضیحات سفارش</th>
                <th>تعداد پیشنهادات سفارش</th>

                <th>وضعیت سفارش</th>
                <th>تاریخ موردنظر کاربر برای دریافت سرویس</th>
                <th>تاریخ پذیرش پیشنهاد کارشناس</th>
                <th>تاریخ اتمام سرویس</th>
                <th>ثبت نظر</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.CustomerName</td>

                    <td>
                        <span class="badge bg-info text-dark">@item.HomeServiceName</span>
                    </td>
                    <td class="text-start" style="max-width: 300px;">
                        @item.Title
                    </td>
                    <td class="text-start" style="max-width: 300px;">
                        @item.CreatedAt
                    </td>
                    <td class="text-start" style="max-width: 300px;">
                        @item.Description
                    </td>

                    <td>
                        <div class="text-center dir-rtl">
                            @item.SuggesstionCount.ToString()
                        </div>
                    </td>
                    <td>
                        @if (item.Status == "Completed")
                        {
                            <span class="badge bg-success">اتمام کار</span>
                        }
                        else if (item.Status == "RejectedByAdmin")
                        {
                            <span class="badge bg-danger">درخواست توسط ادمین رد شد</span>
                        }
                        
                    </td>
                    <td class="text-start" style="max-width: 300px;">
                        @item.AppointmentReadyDate
                    </td>

                    <td class="text-start" style="max-width: 300px;">
                        @item.VerifyExpertDate
                    </td>
                    <td class="text-start" style="max-width: 300px;">
                        @item.CompletedDate
                    </td>
                    <td>
                        @if (item.CommentId < 1)
                        {
                            <a asp-area="Customer"
                               asp-controller="Request"
                               asp-action="AddComment"
                               asp-route-requestId="@item.Id"
                               class="btn btn-success btn-sm">
                                ✍️ ثبت نظر
                            </a>
                        }
                        else
                        {

                            <a asp-area="Customer"
                               asp-controller="Request"
                               asp-action="ShowComment"
                               asp-route-requestId="@item.Id"
                               class="btn btn-success btn-sm">
                                مشاهده نظر
                            </a>
                        }

                    </td>

                </tr>
            }
        </tbody>
    </table>


    <nav>
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link"
                       asp-area="Customer"
                       asp-controller="Request"
                       asp-action="ShowDoneRequests"
                       asp-route-pageNumber="@i"
                       asp-route-pageSize="@Model.PageSize">

                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>
}
else
{
    <div class="alert alert-info text-center">
        هیچ سفارشی برای نمایش وجود ندارد.
    </div>
}