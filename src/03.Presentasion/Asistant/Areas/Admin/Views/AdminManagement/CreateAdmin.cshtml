@using Asistant.Areas.Admin.Models
@model CreateAdminViewModel
@{
    ViewData["Title"] = "ساخت ادمین جدید";
}

<h4>ساخت ادمین جدید</h4>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}
@if (ViewBag.Succeed != null)
{
    <div class="alert alert-success">
        @ViewBag.Succeed
    </div>
}
<form asp-area="Admin" asp-action="CreateAdmin" asp-controller="AdminManagement"  method="post">
   

    <div class="mb-3">
        <label asp-for="@Model.Email" class="form-label">ایمیل</label>
        <input asp-for="@Model.Email" class="form-control" />
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Password" class="form-label">رمز عبور</label>
        <input asp-for="@Model.Password" class="form-control" />
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.FirstName" class="form-label">نام</label>
        <input asp-for="@Model.FirstName" class="form-control" />
        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.LastName" class="form-label">نام خانوادگی</label>
        <input asp-for="@Model.LastName" class="form-control" />
        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Balance" class="form-label">موجودی</label>
        <input asp-for="@Model.Balance" class="form-control" />
        <span asp-validation-for="@Model.Balance" class="text-danger"></span>
    </div>
 

    <button type="submit" class="btn btn-success">ثبت ادمین</button>
    <a asp-area="Admin" asp-action="ShowAdmins" asp-controller="AdminManagement" class="btn btn-secondary">بازگشت</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
