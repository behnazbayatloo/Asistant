@using Asistant.Areas.Admin.Models
@model CategoryViewModel
@{
    ViewData["Title"] = "ساخت دسته بندی جدید";
}

<h4>ساخت دسته بندی جدید</h4>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}
@if (TempData["Succeed"] != null)
{
    <div class="alert alert-success">
        @TempData["Succeed"]
    </div>
}
<form asp-area="Admin" asp-action="CreateCategory" asp-controller="CategoryManagement" enctype="multipart/form-data" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    @if (!ViewData.ModelState.IsValid)
    {
        <div asp-validation-summary="All" class="text-danger"></div>
    }


    <div class="mb-3">
        <label asp-for="@Model.Name" class="form-label">نام دسته بندی</label>
        <input asp-for="@Model.Name" class="form-control" />
       
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Image" class="form-label">آپلود عکس </label>
        <input asp-for="@Model.Image" type="file" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">ثبت دسته بندی</button>
    <a asp-area="Admin" asp-action="Index" asp-controller="CategoryManagement" class="btn btn-secondary">بازگشت</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}