@using Asistant.Areas.Expert.Models
@model ExpertViewModel
@{
    Layout = "_ExpertLayout";
    ViewData["Title"] = "نمایش اطلاعات کارشناس";
}
<h4>نمایش اطلاعات کارشناس</h4>
@if (TempData["Error"] is not null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}
<div class="mb-3">

    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <img src="@Url.Content(Model.ImagePath)"
             alt="عکس کارشناس"
             class="img-thumbnail"
             style="max-width:150px;" />
    }

    else
    {

        <p>عکسی ثبت نشده است</p>
    }
</div>
<table class="table table-striped table-hover text-center">
    <thead class="table-light">
        <tr>
            <th>شناسه</th>
            <th>نام</th>
            <th>نام خانوادگی</th>
            <th>ایمیل</th>
            <th>شهر</th>
            <th>موجودی</th>
            <th>تخصص ها</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Id</td>
            <td>@Model.FirstName</td>
            <td>@Model.LastName</td>
            <td>@Model.Email</td>
            <td>@Model.CityName</td>
            <td>@Model.Ballance.ToString()</td>
            
            <td style="max-width: 300px; min-width: 200px;">
                <div class="d-flex flex-wrap gap-1">
                    @if (Model.HomeServiceNames != null && Model.HomeServiceNames.Any())
                    {
                        @foreach (var skill in Model.HomeServiceNames)
                        {
                            <span class="badge bg-secondary text-wrap text-start" style="font-size: 0.85em;">
                                @skill
                            </span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </div>
            </td>
        </tr>

    </tbody>
</table>
